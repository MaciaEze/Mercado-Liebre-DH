<!DOCTYPE html>
<html>

    <%- include('partials/head.ejs') %>

    <body>

        <%- include('partials/header.ejs') %>

        <main class="register">

            <form action="/" method="" class="register" >

                <h3>Ingresar</h3>

                <div class="form-group">
                    <label for="name">Nombre de usuario</label>
                    <input type="text" name="name" placeholder="Nombre de usuario" minlength="4" required >
                </div>

                <div class="form-group">
                    <label for="pass">Contraseña</label>
                    <input type="password" name="pass" minlength="6" maxlength="10" required placeholder="Contraseña">
                </div>

                <button type="submit" class="primary"> Ingresar </button>

            </form>

        </main>

        <%- include('partials/footer.ejs') %>

    </body>
</html>