<!DOCTYPE html>
<html>

    <%- include('partials/head.ejs') %>

    <body>

        <%- include('partials/header.ejs') %>

        <section class="banner">
            <img src="images/img-home-banner.jpg" alt="Banner de ofertas">
        </section>
        
        <main class="container">
            <section class="last-visit">
                <h3 class="title">Basado en tu Ãºltima visita</h3>
                <div class="products">

                    <% productos.forEach(producto =>{ %>
                    
                    <article class="card">
                        <a href="/productDetail/<%= producto.id %>">
                        <img src="<%= producto.img %>" alt="Cafetera" class="product_img">
                            <div class="main-article">
                                <i class="fas fa-truck"></i>
                                <p class="price"><%= producto.precio %></p>
                                <p class="discount"><%= producto.descuento %></p>
                                <h4 class="description"><%= producto.nombre %></h4>
                            </div>
                        </a>
                    </article>

                    <%})%>

                </div>
            </div>
            </section>
            <section class="offers">
                <h3>Ofertas</h3>
                <div class="products">

                    <% productos.forEach(producto =>{ %>
                    
                    <article class="card">
                        <a href="/productDetail/<%= producto.id %>">
                        <img src="<%= producto.img %>" alt="Cafetera" class="product_img">
                            <div class="main-article">
                                <i class="fas fa-truck"></i>
                                <p class="price"><%= producto.precio %></p>
                                <p class="discount"><%= producto.descuento %></p>
                                <h4 class="description"><%= producto.nombre %></h4>
                            </div>
                        </a>
                    </article>

                    <%})%>

                </div>  
            </section>
        </main>

        <%- include('partials/footer.ejs') %>
        
    </body>
</html>